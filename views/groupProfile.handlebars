        {{!-- !-- <h2>This is Group Profile Page!!</h2> --}} 
        <div class="group_summary">
            <div class="group-header">
              <h2>{{group_name}} <a href="/update-group" class="button-8" >Update Group Goal</a></h2>
              <div class="mygoal">
                  <p>Group Goal:<br /> When we earn <strong class="goalstar">{{group_star_goal_num}}</strong> stars, 
                  <span>{{group_goal_award}}</span>!!</p>
              </div>
            </div>
            
            <div class="group-info">
              <div class="group-pic">
                <img src="{{group_picture}}" />
              </div>
              
              <div class="task-container">
                <ul class="task">
                {{#each taskSet}}
                  <li>{{task}} <img src="/images/stars/star_{{color}}.png" class="star-sticker" /><strong>{{starnum}}</strong> 
                  <button class="delBtn button-8" data-taskId="{{id}}">Delete</button></li>
                {{else}}
                  <p li="nodata">No Task Data. Please create a task!</p>
                {{/each}}
                </ul>

                <div class="create-task">
                  <form id="createTask" >
                    <label for="taskName"><strong>Create a new task!</strong></label>
                        <input type="text" id="taskName" required/>
                        <button class="button-43">Create!</button>
                  </form>
                </div>
              </div>

            </div>

        </div>


            <section class="familyscore">
                <div class="myscore">
                    <h3>Group Score:</h3>
                    <p>Total Stars: <strong class="totalstar">{{stars.length}}</strong> ‚≠ê
                    
                    <strong class="starleft">{{starsUntilGoal}}</strong> stars until goal</p>
                </div>
            </section>


        <div class="chartarea">
          <h3>üèÜOur Achievements </h3>
            <canvas id="myChart" ></canvas>

            <canvas id="myChart2" ></canvas>
        </div>



        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script type="text/javascript">
const labels = [
{{#each taskSet}}
'{{task}}', 
{{/each}}
];
const datanum = [
{{#each taskSet}}
'{{starnum}}', 
{{/each}}
]
const borderColorData = [
{{#each taskSet}}
'{{colorCodes}}',
{{/each}}
]

const bgColorData = [
{{#each taskSet}}
'{{bgcolorCodes}}',
{{/each}}
]

const data = {
  labels: labels,
  datasets: [{
    label: 'We did it together',
    data: datanum,
    backgroundColor: bgColorData,
    borderColor: borderColorData,
    borderWidth: 1
  }]
};
const config = {
  type: 'bar',
  data: data,
  options: {
    scales: {
      y: {
        beginAtZero: true
      }
    }
  },
};
const myChart = new Chart(
    document.getElementById('myChart'),
    config
  );
  

const labels2 = [
{{#each kidTotalStarSet}}
'{{kidname}}', 
{{/each}}
];
const datanum2 = [
{{#each kidTotalStarSet}}
'{{starnum}}', 
{{/each}}
]

const data2 = {
  labels: labels2,
  datasets: [{
      label: 'Tatal stars of each kid',
    data: datanum2,
    backgroundColor: '#99cfc8',
    borderColor: '#1f695f',
    borderWidth: 1
  }]
};
const config2 = {
  type: 'bar',
  data: data2,
  options: {
    scales: {
      y: {
        beginAtZero: true
      }
    }
  },
};
const myChart2 = new Chart(
    document.getElementById('myChart2'),
    config2
  );
    </script>

    <script src="/js/groupProfile.js"></script>